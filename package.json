{
    "name": "backend-coding-test",
    "version": "1.0.0",
    "description": "A coding assessment for Xendit backend interviews",
    "main": "index.js",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "yarn prebuild && tsc",
        "test": "rimraf .nyc_* npm run lint --fix && nyc mocha tests --parallel --require ts-node/register ./tests/*.test.ts",
        "dev": "nodemon --watch './**/*.ts' --exec 'ts-node' ./index.ts ",
        "start": "node index.js",
        "lint": "eslint --fix src/",
        "prepare": "husky install"
    },
    "keywords": [
        "Xendit"
    ],
    "author": "Bo",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.19.0",
        "express": "^4.16.4",
        "helmet": "^5.0.2",
        "http-status-codes": "^2.2.0",
        "sqlite3": "^5.0.5",
        "validator": "^13.7.0",
        "winston": "^3.7.2"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm test"
        }
    },
    "devDependencies": {
        "@faker-js/faker": "^6.2.0",
        "@tsconfig/node10": "^1.0.8",
        "@types/artillery": "^1.6.3",
        "@types/better-sqlite3": "^7.5.0",
        "@types/chai": "^4.3.1",
        "@types/express": "^4.17.13",
        "@types/mocha": "^9.1.1",
        "@types/sinon": "^10.0.11",
        "@types/sqlite3": "^3.1.8",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.20.0",
        "@typescript-eslint/parser": "^5.20.0",
        "artillery": "^2.0.0-14",
        "better-sqlite3": "^7.5.1",
        "chai": "^4.3.6",
        "eslint": "^8.14.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.0",
        "lint-staged": "^12.4.0",
        "mocha": "^6.1.4",
        "nodemon": "^2.0.15",
        "nyc": "^15.1.0",
        "prettier": "^2.6.2",
        "pretty-quick": "^3.1.3",
        "sinon": "^13.0.2",
        "supertest": "^4.0.2",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3"
    }
}